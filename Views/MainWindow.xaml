<Window x:Class="SealenceDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SealenceDemo"
        xmlns:vm="clr-namespace:SealenceDemo.ViewModels"
        xmlns:ctrl="clr-namespace:SealenceDemo.Controls"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Sealence Demo" Height="700" Width="1000">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/> <!-- Column 0 : Buttons -->
            <ColumnDefinition Width="*"/> <!-- Column 1 : Winch grid -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!-- Row 0 : Buttons and Winch-->
            <RowDefinition Height="200"/> <!-- Row 1 : Status bar-->
        </Grid.RowDefinitions>

        <!-- Column 0 : Buttons -->
        <StackPanel x:Name="buttonsStackPanel" Width="200" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="20,20,0,0">
            <ToggleButton IsChecked="{Binding EnableSimulation}" Content="{Binding SimulateButtonText}" Height="50" />
            <Button Height="50" Content="Simulate" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Column 1 : Winch grid -->
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,5">
                <ctrl:WinchControl x:Name="winch1" DataContext="{Binding Winch1ViewModel, Mode=TwoWay}" Margin="0,0,0,-20"/>
                <Border
                    CornerRadius="40"
                    Width="40"
                    Height="40"
                    BorderBrush="Blue"
                    Background="Blue"
                    BorderThickness="10"
                    VerticalAlignment="Bottom"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="-40,0,0,0">
                <Border
                    CornerRadius="40"
                    Width="40"
                    Height="40"
                    BorderBrush="Blue"
                    Background="Blue"
                    BorderThickness="10"
    HorizontalAlignment="Left"
                    Margin="-45,0,0,0"/>
            <ctrl:WinchControl x:Name="winch2" DataContext="{Binding Winch2ViewModel, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="2">
                <Border
                    CornerRadius="40"
                    Width="40"
                    Height="40"
                    BorderBrush="Blue"
                    Background="Blue"
    BorderThickness="10"
    VerticalAlignment="Top"
    Margin="0,5,0,0"/>
                <ctrl:WinchControl x:Name="winch3" DataContext="{Binding Winch3ViewModel, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="0,0,-85,0" HorizontalAlignment="Right">
                <ctrl:WinchControl x:Name="winch4" DataContext="{Binding Winch4ViewModel, Mode=TwoWay}" HorizontalAlignment="Right" Margin="0,0,0,0"/>

                <Border
                    CornerRadius="40"
                    Width="40"
                    Height="40"
                    BorderBrush="Blue"
                    Background="Blue"
                    BorderThickness="10"
                    HorizontalAlignment="Right"/>
            </StackPanel>
 
            <Border x:Name="circularBorder"
                    CornerRadius="80"
                    Width="80"
                    BorderBrush="Gray"
                    BorderThickness="10"
                    Grid.Column="1"
                    Grid.Row="1">
                
            </Border>
        </Grid>
        
        <!-- Row 1 : Status bar-->
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
